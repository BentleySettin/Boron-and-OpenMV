#Code in VS_Code for the Boron to recieve data from the OpenMV Camera


SYSTEM_THREAD(ENABLED);
SYSTEM_MODE(SEMI_AUTOMATIC);

void setup() {
    Serial.begin(9600);
    Serial1.begin(9600); // Initialize serial communication
}

void loop() {
    // Check if there is data available from the OpenMV camera
    Serial1.println("Testing: 1, 2, 3");

    if (Serial1.available()) {
    Serial.println("if was true");
    
    Serial1.end();
    delay(1000);
    Serial1.begin(9600);
    delay(500);

    String receivedData = Serial1.readStringUntil('Flood'); // Read data until a newline character

    Serial1.end();
    delay(1000);
    Serial1.begin(9600);
    delay(500);

      // Process and use the data received from the OpenMV here
    Serial.print("Received data from OpenMV: ");
    Serial.println(receivedData);
    }
    
    delay(1000);
    

} 
